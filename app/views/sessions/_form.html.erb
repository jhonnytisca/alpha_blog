<div class="container">
  <%= form_with(scope: :session, local: true, url: login_path, class:"my-5 row") do |f| %>
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :email,class: "col-form-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
      </div>
    </div>
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :password,class: "col-form-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
      </div>
    </div>
    <div class="d-flex justify-content-end px-4">
      <%= link_to 'Back', root_path , class: "btn btn-outline-secondary mx-2" %>
      <%= f.submit 'Log in', class: "btn btn-primary mx-2", data: {turbo: "false"}%>
    </div>
  <% end %>
</div>