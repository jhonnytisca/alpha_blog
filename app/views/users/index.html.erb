<% content_for :title, "Bloggers" %>

<h3 class="mb-5">Alpha Bloggers</h3>
<% if @users.empty? %>
  <p class="mt-3 mb-5">No users to show</p>
<% else %>
  <div class="flickr_pagination my-3">
    <%= will_paginate @users, :container => false %>
    <div class="page_info">
      <%= page_entries_info @users %>
    </div>
  </div>
  <%= render 'user' %>
  <div class="flickr_pagination my-3">
    <%= will_paginate @users, :container => false %>
    <div class="page_info">
      <%= page_entries_info @users %>
    </div>
  </div>
<% end %>