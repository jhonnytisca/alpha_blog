<div class="row justify-content-center">
  <% @users.each do |user| %>
    <div class="col-lg-5 col-11 gx-5 mb-5 p-1 p-sm-3">
      <div class="card text-center shadow rounded">
        <div class="card-body">
          <h5 class="card-title"><%= link_to user.username, user %></h5>
          <%= gravatar_for user, size: 200, class: "my-3 rounded mx-auto d-block shadow" %>
          <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
          <div class="row justify-content-center">
            <%= link_to 'View profile', user, class: "btn btn-outline-primary col-4 mx-sm-1 mx-2"%>
            <%= link_to 'Edit profile', edit_user_path(user), class: "btn btn-outline-info col-4 mx-sm-1 mx-2"%>
          </div>
        </div>
        <div class="card-footer text-muted">
          <small>Joined <%= time_ago_in_words(user.created_at) %></small>
        </div>
      </div>
    </div>
  <% end %>
</div>