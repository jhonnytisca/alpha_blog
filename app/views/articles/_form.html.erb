<div class="container">
  <%= render "shared/errors", obj: @article %>
  <%= form_with(model: @article, local: true, class:"my-5 row") do |f| %>
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :title, class: "col-form-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article" %>
      </div>
    </div>
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :description, class: "col-form-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article" %>
      </div>
    </div>
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :category, class: "col-form-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.collection_check_boxes :category_ids, Category.order(:name), :id, :name do |check| %>
          <%= check.check_box class: "btn-check" %>
          <%= check.label class:"btn btn-small btn-outline-primary m-1"%>
        <% end %>
        <%#= f.collection_select :category_id, Category.order(:name), :id, :name, {prompt: "Hola"}, {multiple: true, class: "form-select"} %>
      </div>
    </div>
    <div class="d-flex justify-content-end px-4">
      <%= link_to 'Back', articles_path, class: "btn btn-outline-secondary mx-2" %>
      <%= f.submit( @article.new_record? ? "Create" : "Update", class: "btn btn-primary mx-2", data: {turbo: "false"}) %>
    </div>
  <% end %>
</div>
