<% if @article.errors.any? %>
<div class="alert alert-warning mt-5 shadow alert-dismissible fade show" role="alert">
  <p><strong>The following errors prevented the article from being saved</strong></p>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>
