<div class="container">
  <%= render "shared/errors", obj: @category %>
  <%= form_with(model: @category, local: true, class:"my-5 row") do |f| %>
    <div class="mb-3 row">
      <div class="col-md-3 col-xl-2">
        <%= f.label :name, "Category name", class: "col-form-label" %>
      </div>
      <div class="col-md-9 col-xl-10">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
      </div>
    </div>
    <div class="d-flex justify-content-end px-4">
      <%= link_to 'Back', categories_path, class: "btn btn-outline-secondary mx-2" %>
      <%= f.submit( @category.new_record? ? 'Create' : 'Update', class: "btn btn-primary mx-2", data: {turbo: "false"}) %>
    </div>
  <% end %>
</div>
